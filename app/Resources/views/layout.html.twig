{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="site de vente de ticket en ligne pour le Musée du Louvre">
    <meta name="author" content="Musée du Louvre">

    <title>{% block title %}Musée du Louvre {% endblock %}</title>

    {% block stylesheets %}

    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    {% endblock %}
  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" id="mainNav">
      <div class="container">
        <img src="{{ asset('bundles/louvrebooking/images/logo_paris.svg') }}" width="50px" height="50px"/><a class="navbar-brand js-scroll-trigger" href="{{ path('louvre_booking_homepage1') }}">  Musée du Louvre</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="{{ path('louvre_booking_homepage1') }}">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="{{ path('louvre_booking_booking') }}">Billeterie</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="{{ path('louvre_booking_informations') }}">Informations Pratiques</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="{{ path('louvre_booking_contact') }}">Contact</a>
            </li>
          </ul>
           <a  href="{{ path('louvre_booking_booking') }}" class="btn navbar-btn btn-danger" role="button">Réserver</a>
        </div>
      </div>
    </nav>

    {% block header_image %}
    {% endblock %}
    
    <section id="body">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mx-auto">
               {% block body %}
               {% endblock %}
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; {{owner}} {{ 'now'|date('Y') }}</p>
      </div>
      <!-- /.container -->
    </footer>

    {% block javascripts %}
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    {% endblock %}  

  </body>
</html>
